@using Client.Services
@using Client.Helpers
@{

    var currentController = ViewContext.RouteData.Values["controller"] as string;
    var currentAction = ViewContext.RouteData.Values["action"] as string;

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@currentController | CMCS</title>
    <link rel="icon" href="~/icon.png" type="image/x-icon" />
    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet"
          crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap-select/css/bootstrap-select.min.css" />

    <link rel="stylesheet" href="~/css/shared.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/guest-site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/variables.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/toast.css" asp-append-version="true" />

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap-select/js/bootstrap-select.min.js"></script>
</head>

<body>
    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top">
        <div class="container-fluid d-flex align-items-center justify-content-between">

            <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center scrollto me-auto me-lg-0">
                <img src="/assets/images/fpt-education-logo.png" />
            </a>
            <nav id="navbar" class="navbar">
                <ul>
                    <li class="nav-item " title="Home">
                        <a asp-controller="Home" asp-action="Index" class="nav-link @(currentController == "Home" && currentAction == "Index" ? "active" : "")">
                            Home
                        </a>
                    </li><!-- End Home Nav -->

                    <li class="nav-item " title="Sự kiện">
                        <a asp-controller="News" asp-action="Index" class="nav-link @(currentController == "News" ? "active" : "")">
                            News
                        </a>
                    </li>
                </ul>

            </nav><!-- navbar -->
            <div class="navbar-mobile" style="display: contents;">
                <a class="mobile-nav-toggle d-none" href="#" data-bs-toggle="dropdown">
                    <i class="bi bi-list "></i>
                </a><!-- End Profile Iamge Icon -->
                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow ">
                    <li class="nav-item " title="Trang chủ">
                        <a asp-controller="Home" asp-action="Index" class="nav-link @(currentController == "Home" && currentAction == "Index" ? "active" : "")">
                            Home
                        </a>
                    </li><!-- End Home Nav -->

                    <li class="nav-item " title="Sự kiện">
                        <a asp-controller="Event" asp-action="Index" class="nav-link @(currentController == "News" ? "active" : "")">
                            News
                        </a>
                    </li><!-- End Events Nav -->
                    <li class="nav-item" title="Liên hệ">
                        <a asp-controller="Contact" asp-action="Index" class="nav-link @(currentController == "Contact"  ? "active" : "")">
                            Contact
                        </a>
                    </li><!-- End Clubs Nav -->
                    <li class="nav-item px-3 py-2" title="Đăng nhập">
                        <a class="btn btn-primary btn-signin nav-link color-white py-2" asp-controller="Authen" asp-action="SignIn">Login</a>
                    </li><!-- End Clubs Nav -->

                </ul><!-- End Profile Dropdown Items -->

            </div>

            <a class="btn btn-primary btn-signin" asp-controller="Authen" asp-action="SignIn">Login</a>

        </div>
    </header><!-- End Header -->

    <main id="main" class="main ">
        @RenderBody()
    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">

        <div class="footer-content">
            <div class="container">
                <div class="copyright text-center">
                    &copy; Copyright <strong><span>FPT Education</span></strong>
                </div>
            </div>
        </div>


    </footer><!-- End Footer -->

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/toast.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": true,
            "progressBar": true,
            "positionClass": "toast-bottom-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "200",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }

        $(function () {

            var toastMessage = '@TempData["ToastMessage"]';
            var toastType = '@TempData["ToastType"]';
            if (toastMessage && toastType) {
                toastr[toastType](toastMessage);
            }
        });



    </script>
</body>
</html>
